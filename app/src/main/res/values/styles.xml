<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Museo_Cano_Pacha" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/george_semibold</item>
        <item name="android:fontFamily">@font/george_semibold</item>

    </style>

    <style name="main_button" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@drawable/main_btn_state</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/dim_15dp</item>
        <item name="android:textSize">@dimen/dim_18sp</item>
        <item name="android:radius">@dimen/dim_10dp</item>
        <item name="elevation">@dimen/dim_5dp</item>
    </style>

</resources>